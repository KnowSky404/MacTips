" only for vim/macvim
" 基础设置2
set number                      " 显示行号
set relativenumber              " 显示相对行号
set cursorline                  " 高亮当前行
set tabstop=4                   " Tab 键宽度为 4 个空格
set shiftwidth=4                " 自动缩进宽度为 4
set expandtab                   " 将 Tab 转换为空格
set clipboard=unnamedplus       " 与系统剪贴板共享
set encoding=utf-8              " 设置默认编码为 UTF-8

" 启用语法高亮
syntax on

" 设置主题
colorscheme desert

" only for macvim
set guifont=RobotoMonoNF-Rg:h14
set lines=30
set columns=110
" set background=dark
" set transparency=90
